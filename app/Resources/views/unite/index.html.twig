{% extends 'base.html.twig' %}

{% block content %}
    <h1>Unites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
             
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unite in unites %}
            <tr>
                <td><a href="{{ path('unite_show', { 'id': unite.id }) }}">{{ unite.id }}</a></td>
                <td>{{ unite.libelle }}</td>
               
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('unite_show', { 'id': unite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('unite_edit', { 'id': unite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unite_new') }}">Create a new unite</a>
        </li>
    </ul>
{% endblock %}
